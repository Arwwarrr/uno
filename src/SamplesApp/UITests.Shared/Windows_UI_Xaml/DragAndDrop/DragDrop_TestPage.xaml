<UserControl
	x:Class="UITests.Windows_UI_Xaml.DragAndDrop.DragDrop_TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Windows_UI_Xaml.DragAndDrop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="350" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<!-- Drag & Drop event details -->
		<Grid Grid.Column="0"
			  Grid.RowSpan="3"
			  VerticalAlignment="Top"
			  ColumnSpacing="5"
			  Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<TextBlock Grid.ColumnSpan="2"
					   Grid.Row="0"
					   Text="Drag Drop Details"
					   FontWeight="Bold" />
			<TextBlock Grid.Column="0"
					   Grid.Row="1"
					   Text="Active Event: "
					   HorizontalAlignment="Right" />
			<TextBlock x:Name="ActiveEventTextBlock"
					   Grid.Column="1"
					   Grid.Row="1"
					   Text="&lt;None&gt;"
					   HorizontalAlignment="Left" />
			<TextBlock Grid.ColumnSpan="2"
					   Grid.Row="2"
					   Text="DragEventArgs.DataView"
					   FontWeight="Bold" />
			<!-- DragEventArgs.DataView.AvailableFormats -->
			<TextBlock Grid.Column="0"
					   Grid.Row="3"
					   Text="AvailableFormats: "
					   HorizontalAlignment="Right" />
			<TextBlock x:Name="AvailableFormatsTextBlock"
					   Grid.Column="1"
					   Grid.Row="3"
					   Text="&lt;None&gt;"
					   HorizontalAlignment="Left" />
			<TextBlock Grid.Column="0"
					   Grid.Row="4"
					   Text="Std. AvailableFormats: "
					   HorizontalAlignment="Right" />
			<TextBlock x:Name="AvailableStdFormatsTextBlock"
					   Grid.Column="1"
					   Grid.Row="4"
					   Text="&lt;None&gt;"
					   HorizontalAlignment="Left" />
			<!-- DragEventArgs.DataView.RequestedOperation -->
			<TextBlock Grid.Column="0"
					   Grid.Row="6"
					   Text="RequestedOperation: "
					   HorizontalAlignment="Right" />
			<TextBlock x:Name="RequestedOperationTextBlock"
					   Grid.Column="1"
					   Grid.Row="6"
					   Text="&lt;None&gt;"
					   HorizontalAlignment="Left" />
		</Grid>
		<!-- Drag source -->
		<Grid Grid.Column="1"
			  Grid.Row="0"
			  Margin="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<TextBlock Grid.Row="0"
					   Text="Drag Source"
					   TextTrimming="CharacterEllipsis"
					   FontWeight="SemiBold"
					   FontSize="16"
					   HorizontalAlignment="Center" />
			<Border Grid.Row="1"
					MinHeight="30"
					MaxHeight="200"
					MaxWidth="700"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					BorderBrush="{ThemeResource TextBoxDisabledForegroundThemeBrush}"
					BorderThickness="1"
					CornerRadius="10"
					Padding="5">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<TextBlock Text="Text"
							   FontWeight="Bold"
							   Grid.Column="0"
							   Grid.Row="0"
							   HorizontalAlignment="Center" />
					<TextBlock x:Name="DragTextSourceTextBlock"
							   Grid.Column="0"
							   Grid.Row="1"
							   Text="Plain text that can be dragged"
							   VerticalAlignment="Center"
							   HorizontalAlignment="Center"
							   DragStarting="DragSource_DragStarting"
							   CanDrag="True" />
					<TextBlock Text="Bitmap"
							   FontWeight="Bold"
							   Grid.Column="1"
							   Grid.Row="0"
							   HorizontalAlignment="Center" />
					<Image x:Name="DragImageSourceImage"
						   Grid.Column="1"
						   Grid.Row="1"
						   Height="100"
						   Stretch="Uniform"
						   Source="https://upload.wikimedia.org/wikipedia/commons/thumb/d/da/Rain_over_Beinn_Eich%2C_Luss_Hills%2C_Scotland.jpg/2560px-Rain_over_Beinn_Eich%2C_Luss_Hills%2C_Scotland.jpg"
						   DragStarting="DragSource_DragStarting"
						   CanDrag="True" />
					<TextBlock Text="WebLink"
							   FontWeight="Bold"
							   Grid.Column="2"
							   Grid.Row="0"
							   HorizontalAlignment="Center" />
					<HyperlinkButton Grid.Column="2"
									 Grid.Row="1">
						<TextBlock x:Name="DragWebLinkSourceTextBlock"
								   Text="https://www.wikipedia.org/"
								   DragStarting="DragSource_DragStarting"
								   CanDrag="True" />
					</HyperlinkButton>
				</Grid>
			</Border>
		</Grid>
		<!-- Drop target -->
		<Border x:Name="DropBorder"
				Grid.Column="1"
				Grid.Row="1"
				MaxHeight="500"
				MaxWidth="700"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Background="Transparent"
				AllowDrop="True"
				DragEnter="DropBorder_DragEnter"
				DragLeave="DropBorder_DragLeave"
				DragOver="DropBorder_DragOver"
				Drop="DropBorder_Drop"
				DropCompleted="DropBorder_DropCompleted"
				Margin="10">
			<Grid IsHitTestVisible="False">
				<Rectangle Stroke="{ThemeResource TextBoxForegroundThemeBrush}"
						   StrokeThickness="2"
						   StrokeDashCap="Round"
						   StrokeDashOffset="0"
						   StrokeDashArray="4"
						   RadiusX="10"
						   RadiusY="10"
						   HorizontalAlignment="Stretch"
						   VerticalAlignment="Stretch"
						   IsHitTestVisible="False" />
				<StackPanel Orientation="Vertical"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							IsHitTestVisible="False">
					<FontIcon x:Name="FileFontIcon"
							  Glyph="&#xE7C3;"
							  FontSize="40"
							  Foreground="{ThemeResource TextBoxDisabledForegroundThemeBrush}"
							  IsHitTestVisible="False" />
					<TextBlock x:Name="FileDropTextBlock"
							   x:Uid="VisualImportControl_FileDropTextBlock"
							   Text="Drop Here"
							   TextAlignment="Center"
							   FontSize="20"
							   Foreground="{ThemeResource TextBoxDisabledForegroundThemeBrush}"
							   IsHitTestVisible="False" />
					<TextBlock x:Name="FileFormatsTextBlock"
							   Grid.Row="0"
							   Text="Plain Text, Images, HTML, RTF, Links &amp; Files"
							   TextAlignment="Center"
							   TextWrapping="Wrap"
							   FontSize="12"
							   Foreground="{ThemeResource TextBoxDisabledForegroundThemeBrush}"
							   Margin="0,10,0,0"
							   IsHitTestVisible="False" />
				</StackPanel>
			</Grid>
		</Border>
		<!-- Drop details -->
		<Grid Grid.Column="1"
			  Grid.Row="2"
			  Margin="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<TextBlock x:Name="DropTitleTextBlock"
					   Grid.Row="0"
					   Text="Last Drop Details"
					   TextTrimming="CharacterEllipsis"
					   FontWeight="SemiBold"
					   FontSize="16"
					   HorizontalAlignment="Center" />
			<Border Grid.Row="1"
					MinHeight="30"
					MaxHeight="200"
					MaxWidth="700"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					BorderBrush="{ThemeResource TextBoxDisabledForegroundThemeBrush}"
					BorderThickness="1"
					CornerRadius="10"
					Padding="5">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<TextBlock x:Name="DropDetailsTextBlock"
							   Grid.Row="0"
							   Text="None"
							   TextWrapping="Wrap" />
					<Image x:Name="DropDetailsImage"
						   Grid.Row="1"
						   Height="160"
						   Visibility="Collapsed"
						   Stretch="Uniform"
						   VerticalAlignment="Stretch"
						   HorizontalAlignment="Stretch" />
				</Grid>
			</Border>
		</Grid>
	</Grid>
</UserControl>
